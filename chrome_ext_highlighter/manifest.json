{
  "manifest_version": 3,
  "name": "Word Highlighter",
  "version": "1.1",
  "description": "Highlight selected words and add asterisks around them. Copy all visible text.",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "extension.png"
  }
}